<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="200dp"
    android:gravity="center_horizontal">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <LinearLayout
            android:id="@+id/area1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="16dp"
            android:background="?attr/selectableItemBackground"
            android:layout_weight="1">
            <TextView
                android:id="@+id/area1_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="节日狂欢    嗨爆全场"
                android:paddingRight="25dp"
                android:paddingBottom="13dp"
                android:textSize="@dimen/area_textsize"
                android:paddingTop="22dp"
                android:gravity="center_vertical" />
            <com.upic.asn.utils.CircleImageView
                android:id="@+id/area1_img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:paddingBottom="11dp"
                android:src="@mipmap/banner"/>

        </LinearLayout>
        <View
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:background="@color/cut_off_blod" />
        <LinearLayout
            android:id="@+id/area2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="16dp"
            android:background="?attr/selectableItemBackground"
            android:layout_weight="1">
            <TextView
                android:id="@+id/area2_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="最佳聚会农庄舌尖美食"
                android:paddingRight="25dp"
                android:paddingBottom="13dp"
                android:textSize="@dimen/area_textsize"
                android:paddingTop="22dp"
                android:gravity="center_vertical" />
            <com.upic.asn.utils.CircleImageView
                android:id="@+id/area2_img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:paddingBottom="11dp"
                android:src="@mipmap/banner"/>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/cut_off_blod" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <LinearLayout
            android:id="@+id/area3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="16dp"
            android:background="?attr/selectableItemBackground"
            android:layout_weight="1">
            <TextView
                android:id="@+id/area3_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="最佳聚会农庄舌尖美食"
                android:paddingRight="25dp"
                android:paddingBottom="13dp"
                android:textSize="@dimen/area_textsize"
                android:paddingTop="22dp"
                android:gravity="center_vertical" />
            <com.upic.asn.utils.CircleImageView
                android:id="@+id/area3_img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:paddingBottom="11dp"
                android:src="@mipmap/banner"/>

        </LinearLayout>
        <View
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:background="@color/cut_off_blod" />
        <LinearLayout
            android:id="@+id/area4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="16dp"
            android:background="?attr/selectableItemBackground"
            android:layout_weight="1">
            <TextView
                android:id="@+id/area4_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="最佳聚会农庄舌尖美食"
                android:paddingRight="25dp"
                android:paddingBottom="13dp"
                android:textSize="@dimen/area_textsize"
                android:paddingTop="22dp"
                android:gravity="center_vertical" />
            <com.upic.asn.utils.CircleImageView
                android:id="@+id/area4_img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:paddingBottom="11dp"
                android:src="@mipmap/banner"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/cut_off_blod" />

</LinearLayout>