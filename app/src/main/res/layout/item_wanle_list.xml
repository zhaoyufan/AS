<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingTop="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="15dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/item_wanle_list_img"
                android:layout_width="175dp"
                android:layout_height="130dp"
                android:src="@mipmap/banner" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/item_wanle_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="天胜'四不用'农庄"
                android:textSize="@dimen/wanle_list_title"/>
            <TextView
                android:id="@+id/item_wanle_list_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/item_wanle_list_rank"
                android:textColor="@color/item_wanle_list_rank"
                android:text="9.5分"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">
                <TextView
                    android:id="@+id/item_wanle_list_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/item_wanle_list_time"
                    android:textColor="@color/item_wanle_list_time"
                    android:text="51分钟"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/item_wanle_list_time"
                    android:textColor="@color/item_wanle_list_time"
                    android:text="/"/>
                <TextView
                    android:id="@+id/item_wanle_list_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/item_wanle_list_time"
                    android:textColor="@color/item_wanle_list_time"
                    android:text="11km"/>
            </LinearLayout>
            <TextView
                android:id="@+id/item_wanle_list_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="10dp"
                android:textColor="@color/item_wanle_list_type"
                android:textSize="@dimen/item_wanle_list_time"
                android:text="特色项目需预定"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/item_wanle_list_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/item_wanle_list_price"
                    android:textColor="@color/item_wanle_list_rank"
                    android:text="289"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/item_wanle_list_price"
                    android:textColor="@color/item_wanle_list_price"
                    android:text="/人"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cut_off" />
</LinearLayout>