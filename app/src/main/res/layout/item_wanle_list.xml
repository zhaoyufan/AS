<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/item_wanle_list_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/banner"
            android:layout_weight="2"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingLeft="10dp"
            android:layout_weight="3">
            <TextView
                android:id="@+id/item_wanle_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="标题11111111111111111111111"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">
                <TextView
                    android:id="@+id/item_wanle_list_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="宁波"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="#d0d0d0" />
                <TextView
                    android:id="@+id/item_wanle_list_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11km"/>
            </LinearLayout>
            <TextView
                android:id="@+id/item_wanle_list_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="111111元/1人"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:paddingBottom="20dp">
                <TextView
                    android:id="@+id/item_wanle_list_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/commom_text_shape"
                    android:text="生活标签"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>