<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">
    <ImageView
        android:id="@+id/store_logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_weight="0.1"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/me"/>
    <TextView
        android:id="@+id/store_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-50dp"
        android:gravity="center_horizontal"
        android:layout_weight="1"
        android:textSize="@dimen/store_title"
        android:textStyle="bold"
        android:text="天胜“四不用”农庄"
        />

</LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/store_pic"
            android:layout_width="match_parent"
            android:layout_height="235dp"
            android:layout_weight="2"
            android:scaleType="fitCenter"
            android:background="?attr/selectableItemBackground"
            android:src="@mipmap/banner"/>
        <TextView
            android:id="@+id/store_price"
            android:layout_width="95dp"
            android:layout_height="30dp"
            android:background="@color/alpha_gray"
            android:layout_marginBottom="35dp"
            android:textColor="@color/store_price"
            android:gravity="center_vertical"
            android:text="人均:388元"
            android:textSize="@dimen/store_price"
            android:layout_alignBottom="@id/store_pic"/>
    </RelativeLayout>
        <TextView
            android:id="@+id/store_brief"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/store_brief"
            android:layout_marginLeft="10dp"
            android:background="?attr/selectableItemBackground"
            android:text="高颜值，高品质的户外拓展体验"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">
        <TextView
            android:id="@+id/go_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/store_go"
            android:text="进店逛逛>"
            android:layout_alignParentRight="true"
            android:background="?attr/selectableItemBackground"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/cut_off" />
</LinearLayout>