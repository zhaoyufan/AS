<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/weekend_item_wanle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingRight="18dp"
            android:background="?attr/selectableItemBackground"
            android:drawableRight="@mipmap/holo_light"
            android:text="玩乐"
            android:textSize="12sp" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#d0d0d0" />
        <TextView
            android:id="@+id/weekend_item_sorting"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingRight="18dp"
            android:background="?attr/selectableItemBackground"
            android:drawableRight="@mipmap/holo_light"
            android:text="分类筛选"
            android:textSize="12sp" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#d0d0d0" />
        <TextView
            android:id="@+id/weekend_item_intelligent"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingRight="18dp"
            android:background="?attr/selectableItemBackground"
            android:drawableRight="@mipmap/holo_light"
            android:text="智能排序"
            android:textSize="12sp" />
    </LinearLayout>

    <com.upic.asn.view.pullrecyclerview.PullRecyclerView
        android:id="@+id/weekend_item_store_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    </com.upic.asn.view.pullrecyclerview.PullRecyclerView>

</LinearLayout>